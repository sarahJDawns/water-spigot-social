<%- include('partials/header') -%>

<main class="bg-slate-100 flex flex-col items-center justify-center w-full h-screen p-6 mx-auto">
  <section class="sm:w-2/3 md:w-1/2 container flex flex-col items-center justify-center p-6">
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="flex-col pb-3 mx-auto text-xl font-bold text-center text-red-700">
      <%= el.msg %>
    </div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
    <div class="pb-5 mx-auto text-xl font-bold text-center text-red-700">
      <%= el.msg %>
    </div>
    <% }) %> <% } %>
    <form action="/login" method="POST" class="container w-full p-8">
      <div class="flex flex-col">
        <label for="email" class="text-slate-700 my-3">Email address</label>
        <input type="email" class="bg-blue-50 caret-purple-600 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100 px-4 py-3 border-2 rounded-full" id="email" name="email" />
      </div>
      <div class="flex flex-col mt-5">
        <label for="password" class="text-slate-700 mb-3">Password</label>
        <input type="password" class="bg-blue-50 caret-purple-600 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100 px-4 py-3 border-2 rounded-full" id="password" name="password" />
      </div>
      <div class="md:justify-center flex flex-row mt-5">
        <button type="submit" class="text-slate-100 bg-cyan-600 baseline hover:bg-cyan-700 md:w-1/3 flex flex-row items-center justify-center w-full p-3 px-6 pt-2 mt-4 font-bold rounded-full">
          Submit
        </button>
      </div>
      <div class="md:justify-center flex flex-row mt-5">
        <button type="button" onclick="bypassLogin()" class="text-slate-100 baseline hover:bg-red-700 md:w-1/2 flex flex-row items-center justify-center w-full p-3 px-6 pt-2 mt-4 font-bold bg-red-600 rounded-full">
          Bypass Login
        </button>
      </div>
    </form>
  </section>
</main>

<%- include('partials/footer') -%>