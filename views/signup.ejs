<%- include('partials/header') -%>

<main class="bg-slate-100 flex flex-col items-center justify-center w-full p-6 mx-auto">
  <section class="sm:w-2/3 md:w-1/2 container flex flex-col items-center justify-center p-6">
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="flex-col pb-3 mx-auto text-xl font-bold text-center text-red-700">
      <%= el.msg %>
    </div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
    <div class="pb-5 mx-auto text-xl font-bold text-center text-red-700">
      <%= el.msg %>
    </div>
    <% }) %> <% } %>
    <form action="/signup" method="POST" class="container w-full p-8">
      <div class="flex flex-col">
        <label for="userName" class="text-slate-700 my-3">User Name</label>
        <input type="text" class="bg-blue-50 caret-purple-600 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100 px-4 py-3 border-2 rounded-full" id="userName" name="userName" />
      </div>
      <div class="flex flex-col mt-5">
        <label for="email" class="text-slate-700 mb-3">Email address</label>
        <input type="email" class="bg-blue-50 caret-purple-600 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100 px-4 py-3 border-2 rounded-full" id="email" name="email" />
        <p class="text-slate-700 py-8 mx-auto text-xl font-bold text-center">
          We'll never share your email.
        </p>
      </div>
      <div class="flex flex-col mt-5">
        <label for="password" class="text-slate-700 mb-3">Password</label>
        <input type="password" class="bg-blue-50 caret-purple-600 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100 px-4 py-3 border-2 rounded-full" id="password" name="password" />
      </div>
      <div class="flex flex-col mt-5">
        <label for="confirmPassword" class="text-slate-700 mb-3">Confirm Password</label>
        <input type="password" class="bg-blue-50 caret-purple-600 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100 px-4 py-3 border-2 rounded-full" id="confirmPassword" name="confirmPassword" />
      </div>
      <div class="md:justify-center md:items-center flex flex-row mt-5">
        <button type="submit" class="flex-flex-row text-slate-100 bg-cyan-600 baseline hover:bg-cyan-700 md:justify-center md:items-center md:w-1/3 w-full p-3 px-6 pt-2 mx-auto mt-4 font-bold rounded-full">
          Submit
        </button>
      </div>
    </form>
  </section>
</main>

<%- include('partials/footer') -%>